<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="Root"
             xmlns:local="clr-namespace:LeagueOfArcher"
             x:Class="LeagueOfArcher.App">
    
        
    <Application.Resources>

        <Style x:Key="lbl_style1" TargetType="Label">
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            <Setter Property="TextColor" Value="Brown"/>
            <Setter Property="Margin" Value="10,5"/>
        </Style>

        <Style x:Key="btn_style_file_field" TargetType="Button">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="BackgroundColor" Value="GreenYellow"/>
            <Setter Property="Margin" Value="5,10"/>
            <Setter Property="HorizontalOptions" Value="Fill"/>
            <Setter Property="VerticalOptions" Value="Start"/>
        </Style>

        <Style x:Key="lbl_style_summary" TargetType="Label">
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="TextColor" Value="{Binding Path=TextColor, Source={x:Reference Root}}"/>
        </Style>
    </Application.Resources>
</Application>
